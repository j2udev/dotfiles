  //neovim
  "vscode-neovim.neovimExecutablePaths.darwin": "/usr/local/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "/Users/wardjl/.config/nvim/init.vim",

  //terminal
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.detectLocale": "off",

  //editor
  "editor.formatOnPaste": true,
  "editor.lineNumbers": "relative",
  "editor.tabSize": 2,
  "editor.fontSize": 20,
  "editor.detectIndentation": false,
  "editor.suggestSelection": "first",
  "editor.renderLineHighlight": "all",

  //workbench
  "workbench.colorTheme": "BeardedTheme Black & Ruby",
  "workbench.activityBar.visible": true,
  "workbench.settings.openDefaultKeybindings": true,
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#ff000020"
  }

  //files
  "files.eol": "\n",
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },

  //git
  "git.autofetch": true,

  //prettier
  "prettier.proseWrap": "always",

  //go
  "go.useLanguageServer": true,
  "go.autocompleteUnimportedPackages": true,
  "go.toolsManagement.autoUpdate": true,

  //java
  "java.semanticHighlighting.enabled": true,
  "java.debug.settings.console": "internalConsole",
  "java.project.importOnFirstTimeStartup": "automatic",

  //yaml
  "yaml.format.enable": true,

  //extensions
  "extensions.autoUpdate": false,
  "extensions.autoCheckUpdates": true,

  //customizeUI
  "customizeUI.stylesheet": {
      // Let the quick pick take the full window height, so that more bindings
      // are visible.
      ".quick-input-widget > .quick-input-list > .monaco-list":
          "max-height: none !important;",
      // Colorize icons uniformly and add some extra padding
      ".quick-input-widget > .quick-input-list .codicon":
          "color: #83a598 !important; padding-right: 5px;",
      // Colorize entries starting with a `+` differently
      ".quick-input-widget > .quick-input-list .monaco-list-row[aria-label*=\" +\"] .label-description":
          "color: #8ec07c;",
  }


  //miscellaneous
  "update.mode": "none",
  "explorer.confirmDragAndDrop": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,
  "liveshare.audio.joinCallBehavior": "accept",
  "window.zoomLevel": 1,
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },
  "redhat.telemetry.enabled": false,
}
