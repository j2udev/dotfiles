{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/refs/tags/v26.23.6/themes/schema.json",
  "version": 3,
  "console_title_template": "{{ if .Segments.Git.RepoName }}{{ .Segments.Git.RepoName }} - {{ end }}{{ .Folder }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "foreground": "#FFFFFF",
          "background": "#E35F6A",
          "template": " {{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "properties": {
            "arch": "\uf303",
            "debian": "\uf306",
            "fedora": "\uf30a",
            "linux": "\uf17c",
            "macos": "\uf179",
            "manjaro": "\uf312",
            "opensuse": "\uf314",
            "ubuntu": "\uf31b",
            "windows": "\uf17a"
          }
        },
        {
          "type": "session",
          "style": "powerline",
          "foreground": "#FFFFFF",
          "background": "#E35F6A",
          "powerline_symbol": "\ue0b4",
          "template": " {{ if .SSHSession }}\ueba9 {{ end }}{{ .UserName }} ",
          "min_width": 100
        },
        {
          "type": "path",
          "style": "powerline",
          "foreground": "#FFFFFF",
          "background": "#4A90C8",
          "powerline_symbol": "\ue0b4",
          "template": " \ue5ff {{ .Path }} ",
          "properties": {
            "folder_separator_icon": " \ue0b1 ",
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "#000000",
          "background": "#E8C468",
          "powerline_symbol": "\ue0b4",
          "template": " {{ .UpstreamIcon }} {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "foreground": "#000000",
          "background": "#FFFFFF",
          "powerline_symbol": "\ue0b4",
          "template": " {{ .FormattedMs }} ",
          "min_width": 80
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "text",
          "style": "diamond",
          "foreground": "#000000",
          "background": "#A8C5D6",
          "leading_diamond": " \ue0b6",
          "trailing_diamond": "\ue0b4",
          "template": "{{ if .Env.DEVBOX_SHELL_ENABLED }} devbox {{ end }}",
          "min_width": 120
        },
        {
          "type": "kubectl",
          "style": "diamond",
          "foreground": "#FFFFFF",
          "background": "#326CE5",
          "leading_diamond": " \ue0b6",
          "trailing_diamond": "\ue0b4",
          "template": " \u2388 {{ .Context }}{{if .Namespace}} :: {{.Namespace}}{{end}} ",
          "min_width": 130
        },
        {
          "type": "aws",
          "style": "diamond",
          "foreground": "#FF9900",
          "background": "#232F3E",
          "leading_diamond": " \ue0b6",
          "trailing_diamond": "\ue0b4",
          "template": " \uf270 {{.Profile}}{{if .Region}} @ {{.Region}}{{end}} ",
          "min_width": 140
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "status",
          "style": "plain",
          "foreground": "#98C379",
          "foreground_templates": [
            "{{ if .Error }}#E35F6A{{ end }}"
          ],
          "template": "\u279c",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ],
  "final_space": true
}
