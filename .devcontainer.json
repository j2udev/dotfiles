{
  "name": "Dotfiles",
  "image": "ghcr.io/devopsbuildingblocks/devcontainer-images/ubuntu-devbox:0.1.11",
  "customizations": {
    "vscode": {
      "settings": {
        "dotfiles.repository": "j2udev/dotfiles",
        "dotfiles.targetPath": "~/.config/dotfiles"
      }
    }
  },
  "remoteEnv": {
    "DOTFILES_THEME": "db2"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devopsbuildingblocks/devcontainer-features/claude:0": {}
  }
}